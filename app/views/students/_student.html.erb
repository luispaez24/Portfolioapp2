<div id="<%= dom_id student %>">
  <p>
    <strong>Name:</strong>
    <%= student.name %>
  </p>

  <p>
    <strong>School email:</strong>
    <%= student.school_email %>
  </p>

  <p>
    <strong>Major:</strong>
    <%= student.major %>
  </p>

  <p>
    <strong>Minor:</strong>
    <%= student.minor %>
  </p>

  <p>
    <strong>Graduation date:</strong>
    <%= student.graduation_date %>
  </p>

<p>
    <% if @student.avatar.attached? %>
      <%= image_tag @student.avatar, alt: "Profile Picture" %>
    <% else %>
      <%= image_tag 'default-avatar.png', alt: "Default Profile Picture" %>
    <% end %>
  </p>

  <%= link_to 'Edit', edit_student_path(@student) %> |
  <%= link_to 'Back', students_path %>

</div>
